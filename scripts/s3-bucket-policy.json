{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadForImages",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": [
        "arn:aws:s3:::baliciaga-database/image/*",
        "arn:aws:s3:::baliciaga-database/image-v2/*"
      ]
    },
    {
      "Sid": "PublicReadForBarImages",
      "Effect": "Allow", 
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": [
        "arn:aws:s3:::baliciaga-database/bar-image-dev/*",
        "arn:aws:s3:::baliciaga-database/bar-image/*"
      ]
    },
    {
      "Sid": "PublicReadForCoworkImages",
      "Effect": "Allow", 
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": [
        "arn:aws:s3:::baliciaga-database/cowork-image-dev/*",
        "arn:aws:s3:::baliciaga-database/cowork-image/*"
      ]
    },
    {
      "Sid": "PublicReadForResizedWebPImages",
      "Effect": "Allow",
      "Principal": "*", 
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::baliciaga-database/photo_webp_resized/*"
    }
  ]
} 